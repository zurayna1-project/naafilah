// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Poem {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  coverImage  String?
  category    String?
  // [BARU] Kolom Author (Default 'Admin' agar data lama tidak error)
  author      String   @default("Admin") 
  isFeatured  Boolean  @default(false)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// [BARU] Tabel untuk Kiriman Karya dari Pengunjung
model PoemSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  title       String
  content     String
  coverImage  String?  // [BARU] Tambahkan ini
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

// --- Tabel Lain Tetap Sama ---

model SiteSettings {
  id              String   @id @default(cuid())
  siteTitle       String   @default("Zurayna")
  siteSubtitle    String?
  headerImage     String?
  socialInstagram String?
  socialTwitter   String?
  socialTiktok    String?
  socialWhatsapp  String?
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}